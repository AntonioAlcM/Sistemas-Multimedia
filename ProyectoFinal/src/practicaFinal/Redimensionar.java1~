    /**
     * Aceota los cambios producidos y cierra la ventana
     *
     * @param evt - Evento producido por el ratón
     */
    private void jReAceptarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jReAceptarActionPerformed
        try {
            this.setClosed(true);
        } catch (PropertyVetoException ex) {
            Logger.getLogger(Redimensionar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jReAceptarActionPerformed

    /**
     * Cuando cambias el valor por defecto se activan los botones
     *
     * @param evt - Evento producido por el teclado
     */
    private void jAnchoKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jAnchoKeyPressed
        this.jReAceptar.setVisible(false);
        this.jReCancelar.setVisible(true);
        this.jReEscalar.setVisible(true);
        this.jReRedimensionar.setVisible(true);
    }//GEN-LAST:event_jAnchoKeyPressed
    /**
     * Cuando cambias el valor por defecto se activan los botones
     *
     * @param evt - Evento producido por el teclado
     */
    private void jAltoKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jAltoKeyPressed
        this.jReAceptar.setVisible(false);
        this.jReCancelar.setVisible(true);
        this.jReEscalar.setVisible(true);
        this.jReRedimensionar.setVisible(true);
    }//GEN-LAST:event_jAltoKeyPressed
    /**
     * Reescala la imagen al valor que tenga los campos ancho y alto
     *
     * @param evt - Evento producido por el ratón
     */
    private void jReEscalarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jReEscalarActionPerformed
        vi.getLienzo().reescalar(Integer.parseInt(this.jAncho.getText()), Integer.parseInt(this.jAlto.getText()));
        parent.setAlto(Integer.parseInt(this.jAlto.getText()));
        parent.setAncho(Integer.parseInt(this.jAncho.getText()));
        try {
            this.setClosed(true);
        } catch (PropertyVetoException ex) {
            Logger.getLogger(Redimensionar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jReEscalarActionPerformed
    /**
     * Redimensiona la imagen al valor que tenga los campos ancho y alto
     *
     * @param evt - Evento producido por el ratón
     */
    private void jReRedimensionarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jReRedimensionarActionPerformed
        vi.getLienzo().redimensionar(Integer.parseInt(this.jAncho.getText()), Integer.parseInt(this.jAlto.getText()));
        parent.setAlto(Integer.parseInt(this.jAlto.getText()));
        parent.setAncho(Integer.parseInt(this.jAncho.getText()));
        try {
            this.setClosed(true);
        } catch (PropertyVetoException ex) {
            Logger.getLogger(Redimensionar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jReRedimensionarActionPerformed
    /**
     * Sales de la ventana sin aplicar cambios
     *
     * @param evt - Evento producido por el ratón
     */
    private void jReCancelarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jReCancelarActionPerformed
        try {
            this.setClosed(true);
        } catch (PropertyVetoException ex) {
            Logger.getLogger(Redimensionar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jReCancelarActionPerformed


