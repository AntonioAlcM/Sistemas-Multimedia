    /**
     * Crea un nuevo objeto con un tamaño específico
     *
     * @param vi - JInternalframe de tipo VentanaImagenes
     * @param parent - Jframe de tipo Paint
     */
    public Redimensionar(VentanaImagenes vi, Paint parent) {
        initComponents();
        if (vi != null) {
            this.jAncho.setText(Integer.toString(vi.getLienzo().getImage().getWidth()));
            this.jAlto.setText(Integer.toString(vi.getLienzo().getImage().getHeight()));
            this.vi = vi;
            this.jReCancelar.setVisible(false);
            this.jReEscalar.setVisible(false);
            this.jReRedimensionar.setVisible(false);
        }
        this.parent = parent;
    }

