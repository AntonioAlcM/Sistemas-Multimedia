package practicaFinal;

import java.awt.Component;
import java.io.File;
import javax.media.Manager;
import javax.media.MediaLocator;
import javax.media.Player;



/**
 *
 * @author Antonio
 */
public class VentanaInternaReproduccionVideo extends VentanaInterna{
    private Player player = null;
    
    /**
     * Creates new form VentanaReproduccion
     */
    private VentanaInternaReproduccionVideo(File f) {
        initComponents();
        String sfichero = "file:" + f.getAbsolutePath();
        MediaLocator ml = new MediaLocator(sfichero);
        try {
            player = Manager.createRealizedPlayer(ml);
            Component vc = player.getVisualComponent();
            if(vc!=null)
                add(vc, java.awt.BorderLayout.CENTER);
            Component cpc = player.getControlPanelComponent();
            if(cpc!=null)
                add(cpc, java.awt.BorderLayout.SOUTH);
        }catch(Exception e) {
            System.err.println("VentanaReproduccionVideo: "+e);
            player = null;
        }
    }
    /**
     * Crea una intancia de VentanaInternaReproduccionVideo pasandole como 
     * parámetro un fichero.
     * @param f - Fichero de video que se desea reproducir.
     * @return - Devuelve una VentanaInternaReproduccionVideo.
     */
    public static VentanaInternaReproduccionVideo getInstance(File f){
        VentanaInternaReproduccionVideo v = new VentanaInternaReproduccionVideo(f);
        if(v.player!=null) 
            return v;
        else 
            return null;
    }
    /**
     * Reproduce el video
     */
    public void play() {
        if (player != null) {
            try {
                player.start();
            } catch (Exception e) {
                System.err.println("VentanaReproduccionVideo: "+e);
            }
        }
    }
    /**
     * Cierra el video
     */
    public void close() {
        if (player != null) {
            try {
                player.close();
            } catch (Exception e) {
                System.err.println("VentanaReproduccionVideo: "+e);
            }
        }
    }
